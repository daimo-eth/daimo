{
  "name": "daimo-mobile",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "expo start --dev-client",
    "start:tunnel": "expo start --dev-client --tunnel",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "lint": "eslint . && ts-unused-exports ./tsconfig.json && npx depcheck --ignores @expo/ngrok,@types/jest,expo-dev-client,expo-splash-screen,expo-build-properties,@babel/core",
    "test": "tsc --noEmit && jest",
    "fix:deps": "npx expo install --fix",
    "fix:lint": "eslint --fix ."
  },
  "dependencies": {
    "@expo/ngrok": "^4.1.0",
    "@react-navigation/native": "^6.1.6",
    "@react-navigation/native-stack": "^6.9.12",
    "@react-navigation/stack": "^6.3.16",
    "@types/jest": "^29.5.1",
    "@types/react": "~18.0.27",
    "abitype": "0.8.1",
    "depcheck": "^1.4.3",
    "eslint": "^8.38.0",
    "eslint-config-universe": "^11.2.0",
    "expo": "~48.0.15",
    "expo-dev-client": "~2.2.1",
    "expo-linking": "^4.0.1",
    "expo-splash-screen": "~0.18.2",
    "expo-status-bar": "~1.4.4",
    "fast-text-encoding": "^1.0.6",
    "jest": "^29.2.1",
    "jest-expo": "^48.0.0",
    "react": "18.2.0",
    "react-native": "0.71.7",
    "react-native-mmkv": "^2.8.0",
    "react-native-safe-area-context": "4.5.0",
    "react-native-screens": "~3.20.0",
    "ts-unused-exports": "^9.0.4",
    "typescript": "^4.9.4",
    "viem": "^0.3.18",
    "expo-build-properties": "~0.6.0"
  },
  "eslintConfig": {
    "extends": "universe/native",
    "rules": {
      "import/order": [
        "error",
        {
          "groups": []
        }
      ],
      "import/no-restricted-paths": [
        "error",
        {
          "zones": [
            {
              "target": "src/",
              "from": "test/",
              "message": "Don't import test files."
            },
            {
              "target": "src/logic",
              "from": "src/view",
              "message": "Don't import view/ files from logic/."
            }
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.20.0"
  }
}