{
  "name": "daimo-mobile",
  "version": "1.0.0",
  "license": "GPL-3.0-or-later",
  "private": true,
  "scripts": {
    "build:sim": "eas build -p ios --profile=sim",
    "build:dev": "eas build -p ios --profile=development",
    "build:pre": "eas build -p all --profile=preview",
    "build:prod": "eas build -p all",
    "start": "expo start --dev-client",
    "start:tunnel": "expo start --dev-client --tunnel",
    "start:android": "expo run:android",
    "start:ios": "expo run:ios",
    "test": "tsc --noEmit && jest",
    "lint": "npm run lint:deps && npm run lint:style",
    "lint:deps": "ts-unused-exports ./tsconfig.json --excludePathsFromReport=gen '--ignoreFiles=.*.config.ts' && npx depcheck --ignores @expo/ngrok,@types/jest,expo-dev-client,expo-splash-screen,expo-build-properties,@babel/core",
    "lint:style": "eslint .",
    "fix:deps": "expo install --fix",
    "fix:style": "eslint --fix ."
  },
  "dependencies": {
    "@babel/core": "^7.20.0",
    "@expo/ngrok": "^4.1.0",
    "@expo/vector-icons": "^13.0.0",
    "@react-navigation/native": "^6.1.6",
    "@react-navigation/native-stack": "^6.9.12",
    "@tanstack/react-query": "^4.29.12",
    "@trpc/client": "^10.29.0",
    "@trpc/react-query": "^10.29.0",
    "@types/jest": "^29.5.1",
    "@types/react": "~18.0.27",
    "abitype": "0.8.1",
    "depcheck": "^1.4.3",
    "eslint": "^8.38.0",
    "eslint-config-universe": "^11.2.0",
    "expo": "~48.0.15",
    "expo-barcode-scanner": "^12.3.2",
    "expo-build-properties": "~0.6.0",
    "expo-clipboard": "^4.1.2",
    "expo-dev-client": "~2.2.1",
    "expo-linking": "^4.0.1",
    "expo-splash-screen": "~0.18.2",
    "expo-status-bar": "~1.4.4",
    "fast-text-encoding": "^1.0.6",
    "jest": "^29.2.1",
    "jest-expo": "^48.0.0",
    "react": "18.2.0",
    "react-native": "0.71.8",
    "react-native-mmkv": "^2.8.0",
    "react-native-qrcode-svg": "^6.2.0",
    "react-native-safe-area-context": "4.5.0",
    "react-native-screens": "~3.20.0",
    "react-native-svg": "13.4.0",
    "ts-unused-exports": "^9.0.4",
    "typescript": "^5.1.3",
    "viem": "^0.3.18"
  },
  "eslintConfig": {
    "extends": "universe/native",
    "rules": {
      "import/order": [
        "error",
        {
          "groups": [
            [
              "builtin",
              "external"
            ],
            [
              "internal",
              "parent",
              "sibling",
              "index"
            ]
          ],
          "newlines-between": "always"
        }
      ],
      "import/no-restricted-paths": [
        "error",
        {
          "zones": [
            {
              "target": "src/",
              "from": "test/",
              "message": "Don't import test files."
            },
            {
              "target": "src/logic",
              "from": "src/view",
              "message": "Don't import view/ files from logic/."
            }
          ]
        }
      ]
    }
  }
}
