{
  "name": "daimo-mobile",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "expo start --dev-client",
    "start:tunnel": "expo start --dev-client --tunnel",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "lint": "eslint . && ts-unused-exports ./tsconfig.json && npx depcheck --ignores @expo/ngrok,@types/jest,expo-dev-client,expo-splash-screen",
    "test": "tsc --noEmit && jest"
  },
  "dependencies": {
    "@expo/ngrok": "^4.1.0",
    "@types/jest": "^29.5.1",
    "@types/react": "~18.0.27",
    "abitype": "0.8.1",
    "depcheck": "^1.4.3",
    "eslint": "^8.38.0",
    "eslint-config-universe": "^11.2.0",
    "expo": "~48.0.11",
    "expo-dev-client": "~2.2.1",
    "expo-splash-screen": "~0.18.2",
    "expo-status-bar": "~1.4.4",
    "fast-text-encoding": "^1.0.6",
    "jest": "^29.2.1",
    "jest-expo": "^48.0.0",
    "react": "18.2.0",
    "react-native": "0.71.7",
    "react-native-mmkv": "^2.8.0",
    "ts-unused-exports": "^9.0.4",
    "typescript": "^4.9.4",
    "viem": "^0.3.18"
  },
  "eslintConfig": {
    "extends": "universe/native",
    "rules": {
      "import/no-restricted-paths": [
        "error",
        {
          "zones": [
            {
              "target": "src/",
              "from": "test/",
              "message": "Don't import test files."
            },
            {
              "target": "src/logic",
              "from": "src/view",
              "message": "Don't import view/ files from logic/."
            }
          ]
        }
      ]
    }
  }
}
