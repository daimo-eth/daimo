{
  "name": "daimo-api",
  "version": "0.0.1",
  "description": "Daimo API for account creation and search",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "test": "tape -r ts-node/register/transpile-only test/**/*.test.ts",
    "lint": "npm run lint:deps && npm run lint:style",
    "lint:deps": "npx depcheck --ignores @tsconfig/node20,@types/tape,tsx",
    "lint:style": "eslint ."
  },
  "repository": "https://github.com/daimo-eth/daimo.git",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@trpc/server": "^10.29.0",
    "@tsconfig/node20": "^1.0.1",
    "@types/tape": "^5.6.0",
    "@wagmi/chains": "^1.1.0",
    "contract-types": "file:../contract-types",
    "eslint": "^8.42.0",
    "eslint-config-universe": "^11.2.0",
    "tape": "^5.6.3",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "viem": "^0.3.50",
    "zod": "^3.21.4"
  },
  "eslintConfig": {
    "extends": "universe/node",
    "ignorePatterns": [
      "dist",
      "gen"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "groups": [
            [
              "builtin",
              "external"
            ],
            [
              "internal",
              "parent",
              "sibling",
              "index"
            ]
          ],
          "newlines-between": "always"
        }
      ]
    }
  }
}