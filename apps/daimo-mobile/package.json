{
  "private": true,
  "name": "@daimo/mobile",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build:sim": "eas build -p ios --profile=sim --non-interactive",
    "build:dev": "eas build -p ios --profile=dev --non-interactive",
    "build:stage": "eas build -p ios --profile=stage",
    "submit:stage": "eas submit --platform ios --profile=stage",
    "start": "expo start --dev-client --clear -i",
    "start:tunnel": "expo start --dev-client --tunnel",
    "run:android": "expo run:android",
    "run:ios": "expo run:ios",
    "test": "tsc --noEmit && jest",
    "lint": "npm run lint:deps && npm run lint:style",
    "lint:deps": "ts-unused-exports ./tsconfig.json --excludePathsFromReport=gen '--ignoreFiles=.*.config.ts' && npx depcheck --ignores @expo/ngrok,@types/jest,expo-dev-client,expo-splash-screen,expo-build-properties,@babel/core,babel-plugin-transform-inline-environment-variables",
    "lint:style": "eslint . --max-warnings=0",
    "fix:deps": "expo install --fix",
    "fix:style": "eslint --fix .",
    "eas-build-post-install": "cd ../.. && npm run build"
  },
  "dependencies": {
    "@babel/core": "^7.20.0",
    "@daimo/api": "*",
    "@daimo/contract": "*",
    "@daimo/expo-enclave": "*",
    "@daimo/userop": "*",
    "@ethersproject/shims": "^5.7.0",
    "@expo/ngrok": "^4.1.0",
    "@expo/vector-icons": "^13.0.0",
    "@react-native-segmented-control/segmented-control": "^2.4.1",
    "@react-navigation/native": "^6.1.6",
    "@react-navigation/native-stack": "^6.9.12",
    "@tanstack/react-query": "^4.29.12",
    "@trpc/client": "^10.29.0",
    "@trpc/react-query": "^10.29.0",
    "@types/jest": "^29.5.2",
    "@types/react": "18.2.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.4",
    "depcheck": "^1.4.3",
    "eslint": "^8.42.0",
    "eslint-config-universe": "^11.2.0",
    "expo": "~48.0.18",
    "expo-application": "^5.1.1",
    "expo-barcode-scanner": "^12.3.2",
    "expo-build-properties": "~0.6.0",
    "expo-clipboard": "^4.1.2",
    "expo-dev-client": "~2.2.1",
    "expo-device": "^5.2.1",
    "expo-linking": "^4.0.1",
    "expo-notifications": "^0.18.1",
    "expo-splash-screen": "~0.18.2",
    "expo-status-bar": "~1.4.4",
    "fast-text-encoding": "^1.0.6",
    "jest": "^29.5.0",
    "jest-expo": "^48.0.0",
    "react": "18.2.0",
    "react-native": "0.71.8",
    "react-native-get-random-values": "^1.9.0",
    "react-native-mmkv": "^2.8.0",
    "react-native-qrcode-svg": "^6.2.0",
    "react-native-safe-area-context": "4.5.0",
    "react-native-screens": "~3.20.0",
    "react-native-svg": "13.4.0",
    "ts-unused-exports": "^9.0.4",
    "typescript": "^5.1.3",
    "viem": "^1.0.7",
    "wagmi": "^1.1.1"
  },
  "eslintConfig": {
    "extends": [
      "universe/native"
    ],
    "rules": {
      "import/no-restricted-paths": [
        "error",
        {
          "zones": [
            {
              "target": "src/",
              "from": "test/",
              "message": "Don't import test files."
            },
            {
              "target": "src/logic",
              "from": "src/view",
              "message": "Don't import view/ files from logic/."
            }
          ]
        }
      ]
    }
  }
}
