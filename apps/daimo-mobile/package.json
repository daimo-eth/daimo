{
  "private": true,
  "name": "@daimo/mobile",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build:sim": "eas build -p ios --profile=sim --non-interactive",
    "build:dev": "eas build -p ios --profile=dev --non-interactive",
    "build:dev-android": "eas build -p android --profile=dev --non-interactive",
    "build:stage": "eas build -p ios --profile=stage --auto-submit --non-interactive",
    "build:stage-android": "eas build -p android --profile=stage --auto-submit --non-interactive",
    "submit:stage": "eas submit --platform ios --profile=stage",
    "submit:stage-android": "eas submit --platform android --profile=stage",
    "dev": "expo start --dev-client --clear -i",
    "dev:android": "expo start --dev-client --clear -a",
    "dev:tunnel": "expo start --dev-client --tunnel",
    "prebuild": "expo prebuild --clean",
    "android": "expo run:android --no-build-cache",
    "ios": "expo run:ios --no-build-cache",
    "test": "tsc --noEmit && jest",
    "lint": "npm run lint:deps && npm run lint:style",
    "lint:deps": "ts-unused-exports ./tsconfig.json --excludePathsFromReport=gen '--ignoreFiles=.*.config.ts' && npx depcheck --ignores @expo/ngrok,@types/jest,expo-dev-client,expo-splash-screen,expo-system-ui,expo-build-properties,expo-local-authentication,@babel/core,babel-plugin-transform-inline-environment-variables",
    "lint:style": "eslint . --max-warnings=0",
    "fix:deps": "expo install --fix",
    "fix:style": "eslint --fix .",
    "eas-build-post-install": "cd ../.. && npm run build"
  },
  "dependencies": {
    "@daimo/api": "*",
    "@daimo/common": "*",
    "@daimo/contract": "*",
    "@daimo/expo-enclave": "*",
    "@daimo/userop": "*",
    "@ethersproject/shims": "^5.7.0",
    "@expo/ngrok": "^4.1.0",
    "@expo/vector-icons": "^13.0.0",
    "@react-native-segmented-control/segmented-control": "2.4.1",
    "@react-navigation/native": "^6.1.6",
    "@react-navigation/native-stack": "^6.9.12",
    "@tanstack/react-query": "^4.29.12",
    "@trpc/client": "^10.34.0",
    "@trpc/react-query": "^10.34.0",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.15",
    "babel-plugin-transform-inline-environment-variables": "^0.4.4",
    "depcheck": "^1.4.3",
    "eslint": "^8.44.0",
    "eslint-config-universe": "^11.3.0",
    "expo": "^49.0.7",
    "expo-application": "^5.1.1",
    "expo-barcode-scanner": "^12.3.2",
    "expo-build-properties": "~0.8.3",
    "expo-clipboard": "~4.3.1",
    "expo-dev-client": "~2.4.6",
    "expo-device": "^5.2.1",
    "expo-font": "^11.4.0",
    "expo-linking": "~5.0.2",
    "expo-local-authentication": "~13.4.1",
    "expo-localization": "^14.3.0",
    "expo-notifications": "^0.20.1",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "expo-system-ui": "~2.4.0",
    "fast-text-encoding": "^1.0.6",
    "jest": "^29.5.0",
    "jest-expo": "^49.0.0",
    "react": "18.2.0",
    "react-native": "0.72.3",
    "react-native-get-random-values": "~1.9.0",
    "react-native-mmkv": "^2.8.0",
    "react-native-qrcode-svg": "^6.2.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-svg": "13.9.0",
    "ts-unused-exports": "^9.0.4",
    "typescript": "^5.1.6",
    "viem": "^1.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0"
  },
  "eslintConfig": {
    "extends": [
      "universe/native"
    ],
    "rules": {
      "import/no-restricted-paths": [
        "error",
        {
          "zones": [
            {
              "target": "src/",
              "from": "test/",
              "message": "Don't import test files."
            },
            {
              "target": "src/logic",
              "from": "src/view",
              "message": "Don't import view/ files from logic/."
            }
          ]
        }
      ]
    }
  }
}
